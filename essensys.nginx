# =============================================================================
# HTTP CONFIGURATION ONLY (No SSL)
# User requested full revert to HTTP
# =============================================================================

# 1. Test Environment (test.essensys.fr) & VPS Hostname
# Serves: React Application (Full)
server {
    listen 80;
    server_name vps-22806d02.vps.ovh.net test.essensys.fr;
    
    # Root for React App
    root /opt/essensys/frontend/dist;
    index index.html index.htm;
    
    include /etc/nginx/mime.types;
    charset utf-8;
    
    # Logs
    access_log /var/log/nginx/essensys-access.log;
    error_log /var/log/nginx/essensys-error.log warn;
    
    # Compression
    gzip on;
    gzip_types text/plain text/css application/json application/javascript text/xml application/xml application/xml+rss text/javascript;

    # Frontend Routing (SPA)
    location / {
        try_files $uri $uri/ /index.html;
    }
    
    # Static Assets
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
    }

    # API Proxy
    location /api/ {
        proxy_pass http://127.0.0.1:8080/api/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Connection "";
        
        proxy_buffering on;
        gzip off;
    }
    
    # Certbot & Apple Verification
    location ^~ /.well-known/ {
        allow all;
        root /var/www/certbot;
    }
}

# 2. Production Environment (mon.essensys.fr, www.essensys.fr)
# Serves: Maintenance Page + API for Legacy Devices
server {
    listen 80;
    server_name mon.essensys.fr www.essensys.fr gateway.essensys.fr essensys.fr;
    
    # Root for Maintenance Site
    root /opt/essensys/maintenance;
    index index.html;
    
    charset utf-8;
    access_log /var/log/nginx/essensys-maint-access.log;
    error_log /var/log/nginx/essensys-maint-error.log;

    # Frontend (Maintenance)
    location / {
        try_files $uri $uri/ /index.html;
    }
    
    # API Proxy (Crucial for Legacy Devices & Newsletter)
    location /api/ {
        proxy_pass http://127.0.0.1:8080/api/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Connection "close";
    }
    
    # Helper for assets (if any in maintenance)
    location ~* \.(png|jpg|jpeg|gif|ico)$ {
        expires 1y;
    }

    # Certbot & Apple Verification
    location ^~ /.well-known/ {
        allow all;
        root /var/www/certbot;
    }
}
